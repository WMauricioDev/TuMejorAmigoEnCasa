generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Estado {
  Adoptado
  Disponible
}

model Usuarios{
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(32)
  email String @db.VarChar(32) @unique
  password String @db.VarChar(64) 

  Mascotas Mascotas[]
}

model Raza{ 
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(32)
  Mascotas Mascotas[]

}

model Categorias{
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(32)

  Mascotas Mascotas[]

}

model Generos{
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(32)
  Mascotas Mascotas[]

}

model Mascotas{
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(32)
  categoria_id Int
  usuario_id Int
  raza_id Int
  genero_id Int
  foto String? @db.VarChar(64)
  estado Estado @default(Disponible)
  latitud Decimal?
  longitud Decimal?
  categoria Categorias @relation(fields: [categoria_id], references: [id]) 
  usuario   Usuarios   @relation(fields: [usuario_id], references: [id])
  raza Raza @relation(fields: [raza_id], references: [id])
  genero Generos @relation(fields: [genero_id], references: [id])
}